<p id="notice"><%= notice %></p>
<div class="col-md-12">
<div class="card">
      <div class="header" data-background-color="purple">
      <h4 class="title"><%= t 'livingrooms.index.title' %></h4>
  </div>
<div class="content table-responsive table-full-width">
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= t('livingrooms.index.name') %></th>
      <th><%= t('livingrooms.index.capacity') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @livingrooms.each do |livingroom| %>
      <tr>
        <td><%= livingroom.name %></td>
        <td><%= livingroom.capacity %></td>
         <td><%= link_to( t('general.buttonshow'), local_livingroom_path(@local,livingroom) , class: "btn btn-info btn-fill btn-wd" )%></td>
        <td><%= link_to( t('general.buttonedit') , edit_local_livingroom_path(@local, livingroom), class: "btn btn-warning btn-fill btn-wd" ) %></td>
        
        
     
      </tr>
    <% end %>
  </tbody>
</table>
</div>
 </div>
<br>

<%= link_to(t('livingrooms.index.button'), new_local_livingroom_path, class: "btn btn-primary btn-fill btn-wd") %>
</div>