<%= form_for([@local,@livingroom])do |f| %>
  <% if @livingroom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@livingroom.errors.count, "error") %> prohibited this livingroom from being saved:</h2>

      <ul>
      <% @livingroom.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
      <div class="row">
          <div class="col-md-4">
              <div class="form-group">
                  <%= f.label t('livingrooms.index.name') %>
                  <%= f.text_field :name , class:"form-control" %>
              </div>
          </div>
          
          <div class="col-md-8">
              <div class="form-group">
                  <%= f.label t('livingrooms.index.capacity') %>
                  <%= f.text_field :capacity , class:"form-control" %>
              </div>
          </div>
      </div>
  
      <div class="actions">
        <%= f.submit t('general.buttonsave')  , :class => 'btn btn-info btn-fill pull-right'   %>
      </div>
      <div class="clearfix"></div>
  </form>
<% end %>
