<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Description</th>
      <th>Capacity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.description %></td>
        <td><%= event.capacity %></td>
        <td><%= event.user %></td>
        <td><%= link_to 'Show', user_event_path(current_user,event) %></td>
        <td><%= link_to 'Edit', edit_user_event_path(current_user,event) %></td>
        <td><%= link_to 'Destroy', user_event_path(current_user, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_user_event_path(current_user) %>
