<p id="notice"><%= notice %></p>
<div class="col-md-12">
  <div class="card card-plain">
    <div class="card-header" data-background-color="purple">
      <h4 class="title"><%= t 'locals.index.title' %></h4>
    </div>
    <div class="card-content table-responsive">
      <table class="table table-hover ">
        <thead>
          <tr>
          <th><%= t 'locals.index.name' %></th>
          <th><%= t 'locals.index.description' %></th>
          <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @locals.each do |local| %>
          <tr>
          <td><%= local.name %></td>
          <td><%= local.description %></td>
          <td  align="right">
          <%= link_to(t('general.buttonshow'), user_local_path(current_user,local) , class: "btn btn-info btn-fill btn-wd" )%>
          <%= link_to(t('general.buttonedit') ,edit_user_local_path(current_user,local), class: "btn btn-warning btn-fill btn-wd" ) %>
                    <%= link_to(t('menu.livingrooms') , local_livingrooms_path(local), class: "btn btn-warning btn-fill btn-wd" ) %>
                    <%= link_to(t('menu.products') , local_products_path(local), class: "btn btn-warning btn-fill btn-wd" ) %>
          <%= link_to(t('general.buttondestroy')  ,local ,method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-fill btn-wd" )%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      <br>
      <%= link_to(t('locals.index.button'), new_user_local_path, class: "btn btn-primary btn-fill btn-wd") %>
  </div>
</div>
