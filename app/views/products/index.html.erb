<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Availability</th>
      <th>Description</th>
      <th>State</th>
      <th>Image</th>
      <th>Local</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.availability %></td>
        <td><%= product.description %></td>
        <td><%= product.state %></td>
        <td><%= product.image %></td>
        <td><%= product.local %></td>
        <td><%= link_to(t('general.buttonshow'), local_product_path(@local,product) , class: "btn btn-info btn-fill btn-wd" )%></td>
        <td><%= link_to 'Edit', edit_local_product_path(@local,product) %></td>
        <td><%= link_to 'Destroy', local_products_path(@local), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

